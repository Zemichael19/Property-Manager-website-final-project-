<!DOCTYPE html>
<html>
  <%- include('head'); -%>
  <!--Bootsrap 4 CDN-->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
  <body style="background-image : url('https://images.unsplash.com/photo-1464938050520-ef2270bb8ce8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=900&q=60'); background-size:100%" >
    <div class="container bg-transparent">
    	<div class="d-flex h-100 bg-transparent">
    		<div class="card bg-transparent">
    			<div class="card-header bg-transparent">
    				<h3>Sign In</h3>
    			</div>
    			<div class="card-body">
    				<form>
    					<div class="input-group form-group">
    						<div class="input-group-prepend">
    							<span class="input-group-text"><i class="fas fa-user"></i></span>
    						</div>
    						<input type="text" name="id" class="form-control" placeholder="e-mail">

    					</div>
    					<div class="input-group form-group">

    						<button type="submit" class="btn btn-info btn-block">Login</button>
    					</div>
    				</form>
    			</div>
    			<div class="card-footer">
    				<div class="d-flex justify-content-center links">
    					Don't have an account?<a href="#">Sign Up</a>
    				</div>
    			</div>
    		</div>
    	</div>
    </div>
    <div class="float-right">
      <div class="col-md-6 white-text text-center text-md-left mt-xl-5 mb-5 wow fadeInLeft" data-wow-delay="0.3s">
        <h1 class="h1-responsive font-weight-bold mt-sm-5 text-secondary">Manage you properties with our website </h1>
        <hr class="hr-light">
        <h6 class="mb-4 text-secondary">We are gonna put the description of the website here</h6>
      </div>
    </div>

    </body>
      <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
      <script> // Log in
        $('form').on('submit', function(event) {
          const form = $(this);
          event.preventDefault();
          $.ajax({method: 'post', url: '/login', data: form.serialize()})
            .done(() => window.location.replace('/properties'))
            .fail(error => alert('Could not log in.'));
        })
      </script>
  </body>
</html>
