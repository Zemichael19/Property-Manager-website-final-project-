<!DOCTYPE html>
<html>
  <body>

    <!-- Default form login -->
    <form class="text-center border border-light p-5" action="#!">

        <p class="h4 mb-4">Sign in</p>

        <!-- Email -->
        <input type="text" name="user" class="form-control mb-4" value="<%=user._id-%>" >
        <input type="text" name="_id" class="form-control mb-4" placeholder="E-mail">

        <!-- Password -->
        <input type="text" name = "name" class="form-control mb-4" placeholder="Full Name">


        <!-- Sign in button -->
        <button id="create"class="btn btn-info btn-block my-4" type="submit">Sign in</button>


    </form>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>
      // Create a course
      $('#create').on('submit', function(event) {
        const form = $(this);
        event.preventDefault();
        $.ajax({method: 'post', url: '/users', data: form.serialize()})
          .done(id => window.location.replace(`/index`))
          .fail(error => alert(error.responseText));
      });
    </script>
  </body>
</html>
